<div class='col-md-12'>
  <% if @whies.present? %>
    <% @whies.each do |why| %>
      <div class='col-md-3 why-card'>
        
        <div class='asked-by'>
          <%= image_tag(why.user.user_image(:original)) %><br>
          <span><b><%= why.user.full_name %></b></span>
        </div>

        <% unless created_by_user?(why.user) %>
          <%= render partial: 'common/follow_unfollow_link', locals: { why: why } %>
        <% end %>

        <div class='content'>
          <%= why.question %>
          <span><%= image_tag('/assets/why.png') %></span>
        </div>

        <% unless created_by_user?(why.user) %>
          <%= render partial: 'common/why_card_options', locals: { why: why } %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class='no-result-found'>
      <%= image_tag '/assets/no-record-found.jpg' %>
    </div>
  <% end %>
</div>