 <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-x-auto text-center app-login-form forgot_password" }) do |f| %>
      <%= f.error_notification %>
      <a href="../index.html" class="app-brand m-b-lg">
        <img src="/assets/brand.png" alt="brand">
      </a>
      <div class="form-group">
       <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control'} %>
      </div>

      <div class="m-b-lg">
        <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
      </div>
      <footer class="screen-login">
        <%= render "users/shared/links" %>
      </footer>
    <% end %>