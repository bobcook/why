<div class="container-fluid container-fill-height">
  <div class="container-content-middle">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-x-auto text-center app-login-form"} ) do |f| %>
      <a href="../index.html" class="app-brand m-b-lg">
        <img src="/assets/brand.png" alt="brand">
      </a>
      <div class="form-group">
        <%= f.input :email, required: false, label: false, autofocus: true, placeholder: 'Enter your email...', input_html: { class: 'form-control'} %>
      </div>

      <div class="form-group m-b-md">
        <%= f.input :password, required: false, label: false, placeholder: 'Enter your password...', input_html: { class: 'form-control'} %>
      </div>

      <div class="m-b-lg">
        <%= f.button :submit, "Log In", class: 'btn btn-primary' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %><br />
        <% end -%>
      </div>
      <footer class="screen-login">
        <%= render "users/shared/links" %>
      </footer>
    <% end %>
  </div>
</div>
